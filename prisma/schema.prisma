// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @unique
  username         String   @unique
  createdAt DateTime @default(now())
  reviews Review[]
  listening Listening[]
  listened Listened[]
  wantToListen WantToListen[]
}

model Review{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  title String
  content String
  published Boolean @default(false)
  author User @relation(fields: [authorId], references: [id])
  authorId String
  album Album @relation(fields: [albumId], references: [id])
  albumId Int
}

model Album{
  id Int @id @default(autoincrement())
  title String
  artist String
  genre String
  year Int
  reviews Review[]
  mbid String
  
}

model Listening{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  mbid String
  artist String
  album String
  user User @relation(fields: [userId], references: [id])
  // users User[]
  userId String
}

model Listened{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  mbid String
  artist String
  album String
  user User @relation(fields: [userId], references: [id])
  userId String
}

model WantToListen{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  mbid String
  artist String
  album String
  user User @relation(fields: [userId], references: [id])
  userId String
}


